# Database Configuration
MONGODB_URI=mongodb://localhost:27017/example_db
MONGODB_URI_PROD=mongodb+srv://example_user:example_password@cluster0.example.mongodb.net/?appName=Cluster0


# JWT Configuration


JWT_SECRET=example_jwt_secret
JWT_REFRESH_SECRET=example_jwt_refresh_secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=example_google_client_id
GOOGLE_CLIENT_SECRET=example_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://123456789012345:example_api_secret@example_cloud_name
CLOUDINARY_CLOUD_NAME=example_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=example_api_secret
CLOUDINARY_MAX_FILE_MB=50
VITE_CLOUDINARY_UPLOAD_PRESET=example_upload_preset

# Admin Settings
ADMIN_EMAIL=admin@example.com
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=Example
ADMIN_DEFAULT_PASSWORD=ExamplePassword123

# Email Service Configuration
CLIENT_ORIGIN=http://localhost:5173,http://localhost:5174,https://example.netlify.app
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SERVICE=example
EMAIL_USER=admin@example.com
EMAIL_PASS=example_email_password
EMAIL_FROM=Admin Example <admin@example.com>

# SMTP Configuration (используется emailService)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=admin@example.com
SMTP_PASS=example_smtp_password
FROM_EMAIL=admin@example.com

# Ethereal Email для тестирования (создайте аккаунт на https://ethereal.email/)
ETHEREAL_USER=example.user@ethereal.email
ETHEREAL_PASS=example_password

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/jpg

# Session Secret
SESSION_SECRET=example_session_secret

